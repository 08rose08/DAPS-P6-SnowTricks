<div class="d-flex flex-row mb-3 flex-wrap">
    <div class="card mb-3 col-11 col-md-3 col-lg-2 mx-md-2 p-0">
        <img src="{{ asset('img/trick/' ~ trick.image) }}" alt="" class="card-img">
    </div>

    {% if trick.imageTricks %}
        {% for image in trick.imageTricks %}
            <div class="card mb-3 col-11 col-md-3 col-lg-2 mx-md-2 p-0">
                <img src="{{ asset('img/trick/' ~ image.src) }}" alt="" class="card-img">
            </div>

        {% endfor %}
    {% endif %}
    
    {% if trick.videoTricks %}
        {% for video in trick.videoTricks %}

            <div class="card mb-3 col-11 col-md-3 col-lg-2 mx-md-2 p-0 embed-responsive">
                <iframe class="embed-responsive-item" width="auto" height="auto" src="{{ video.src }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>                                
            </div>
        {% endfor %}
    {% endif %}
</div>