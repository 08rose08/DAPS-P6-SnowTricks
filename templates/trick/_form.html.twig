
{{ form_start(formTrick) }}

    {{ form_row(formTrick.name, {'attr': {'placeholder': "Nom du trick"}}) }}
    {{ form_row(formTrick.figType) }}
    {{ form_row(formTrick.description, {'attr': {'placeholder': "Description du trick"}}) }}
    {{ form_row(formTrick.image) }}
    <hr class="in-trick">
    <p>Illustrations optionnelles :</p>
    
    <ul id="video-fields-list"
        data-prototype="{{ form_widget(formTrick.videos.vars.prototype)|e }}"
        data-widget-tags="{{ '<li></li>'|e }}"
        data-widget-counter="{{ formTrick.videos|length }}">

        {% for videoField in formTrick.videos %}
            <li>
                {#{{ form_errors(emailField) }}#}
                {{ form_widget(videoField) }}
            </li>
        {% endfor %}

    </ul>

    <button type="button" class="add-another-collection-widget btn btn-primary" data-list-selector="#video-fields-list">Ajouter une video</button>


    <ul id="image-fields-list"
        data-prototype="{{ form_widget(formTrick.imageTricks.vars.prototype)|e }}"
        data-widget-tags="{{ '<li></li>'|e }}"
        data-widget-counter="{{ formTrick.imageTricks|length }}">

        {% for imageField in formTrick.imageTricks %}
            <li>
                {#{{ form_errors(emailField) }}#}
                {{ form_widget(imageField) }}
            </li>
        {% endfor %}

    </ul>

    <button type="button" class="add-another-collection-widget btn btn-primary" data-list-selector="#image-fields-list">Ajouter une image</button>
    <hr class="in-trick">


    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(formTrick) }}
